<header class="border-bottom border-secondary border-1">
    <nav class="navbar navbar-expand-lg navbar-light bg-warning bg-opacity-50">
        <div class="container-fluid">
            <a class="navbar-brand ms-5 fs-4" href="/"><img src="/img/icons/favicon.png" style="width: 30px">ryptStore</a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
                >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-nowrap fs-5">
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/products">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="#contacto">Contacto</a>
                    </li>
                </ul>
                    <form class="d-flex me-1 text-center" role="search">
                    <input
                        class="form-control me-2 align-self-start fs-5"
                        type="search"
                        placeholder="Buscar"
                        aria-label="Buscar"
                        name="searchBar"
                        id="searchBar"
                        />
                    <button class="btn fs-5 me-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <ul class="navbar-nav ml-auto mb-2 mb-lg-0 text-nowrap fs-5">
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/users/logout">Cerrar sesión</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/users/signin">Iniciar sesión</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active mx-1" href="/users/signup">Registrarse</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</header>
